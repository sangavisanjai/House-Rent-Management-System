@model HouseRentManagementSystem.ViewModel.Register
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="style.css" />
    <script src="script.js"></script>
    <title>Document</title>
    <style>

        a {
            color: #666;
            text-decoration: none;
        }

         .input-validation-error {
            border: 1px solid red;
        }

        input {
            font: 16px/26px 'Raleway', sans-serif;
        }

        body {
            color: #666;
            font: 16px/26px 'Raleway', sans-serif;
        }

        .form-wrap {
            width: 30rem;
            margin-top: 8rem;
            /*  box-shadow: 0px 1px 8px #bebebe;
            -webkit-box-shadow: 0px 1px 8px #bebebe;
            -moz-box-shadow: 0px 1px 8px #bebebe;\
             */
        }

            .form-wrap .tabs {
                overflow: hidden;
            }

                .form-wrap .tabs h3 {
                    float: left;
                    width: 48%;
                }

                    .form-wrap .tabs h3 a {
                        padding: 1.1rem 1.1rem;
                        text-align: center;
                        font-weight: 500;
                        background-color: #e6e7e8;
                        display: block;
                        color: #000;
                    }



                        .form-wrap .tabs h3 a.active :active .form-wrap .tabs h3 a.active {
                            background-color: red;
                            font-size: 2rem;
                            color: red;
                        }


            .form-wrap .tabs-content {
                padding: 1.5em;
            }

                .form-wrap .tabs-content div[id$='tab-content'] {
                    display: none;
                }

                .form-wrap .tabs-content .active {
                    display: block !important;
                }

            .form-wrap form .input {
                box-sizing: border-box;
                -moz-box-sizing: border-box;
                color: inherit;
                font-family: inherit;
                padding: 0.8em 0 10px 0.8em;
                border: 1px solid #cfcfcf;
                outline: 0;
                display: inline-block;
                margin: 0 0 0.8em 0;
                padding-right: 2em;
                width: 100%;
            }

            .form-wrap .tabs h3 a.active {
                background-color: #94c2ca;
                box-shadow: 0 0 10px gray;
            }


        .button {
            width: 100%;
            padding: 0.8em 0 10px 0.8em;
            background-color: #0275d8;
            border: none;
            color: #fff;
            cursor: pointer;
            text-transform: uppercase;
        }



        .form-wrap form .checkbox {
            visibility: hidden;
            padding: 20px;
            margin: 0.5em 0 1.5em;
        }

            .form-wrap form .checkbox:checked + label:after {
                -ms-filter: 'progid:DXImageTransform.Microsoft.Alpha(Opacity=100)';
                filter: alpha(opacity=100);
                opacity: 1;
            }

        .form-wrap form label[for] {
            position: relative;
            padding-left: 20px;
            cursor: pointer;
        }

            .form-wrap form label[for]:before {
                content: '';
                position: absolute;
                border: 1px solid #cfcfcf;
                width: 17px;
                height: 17px;
                top: 0px;
                left: -14px;
            }

            .form-wrap form label[for]:after {
                -ms-filter: 'progid:DXImageTransform.Microsoft.Alpha(Opacity=0)';
                filter: alpha(opacity=0);
                opacity: 0;
                content: '';
                position: absolute;
                width: 9px;
                height: 5px;
                background-color: transparent;
                top: 4px;
                left: -10px;
                border: 3px solid #28a55f;
                border-top: none;
                border-right: none;
                -webkit-transform: rotate(-45deg);
                -moz-transform: rotate(-45deg);
                -o-transform: rotate(-45deg);
                -ms-transform: rotate(-45deg);
                transform: rotate(-45deg);
            }

        .form-wrap .help-text {
            margin-top: 0.6em;
        }

            .form-wrap .help-text p {
                text-align: center;
                font-size: 14px;
            }

        #imageregister {
            height: 50%;
            width: 100%;
            margin-top: 15rem;
        }

        .reveal-eye {
            position: relative;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            position: absolute;
            right: 1px;
            top: 1px;
            bottom: 1px;
            z-index: 2;
            width: 25px;
            background: url(https://dtzbdy9anri2p.cloudfront.net/cache/b55f544d09a0872a74b4427ce1fe18dd78418396/telerik/img/dist/reveal-password.png) no-repeat;
            cursor: pointer;
            visibility: hidden;
            opacity: 0;
            transition: opacity .2s ease 0s, visibility 0s linear .2s;
            margin-right: 5%;
            margin-top: 2%;
        }

            .reveal-eye.is-visible {
                display: block;
                visibility: visible;
                opacity: 1;
                transition: opacity .2s ease 0s, visibility 0s linear 0s;
                margin-right: 5%;
                margin-top: 2%;
            }

        @@media only screen and (max-width: 768px) {
            #imageregister {
                display: none;
            }
        }

        .form-control {
            padding: 1rem 1rem;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
        function checkShowPasswordVisibility() {
            var $revealEye = $(this).parent().find(".reveal-eye");
            if (this.value) {
                $revealEye.addClass("is-visible");
            } else {
                $revealEye.removeClass("is-visible");
            }
        }

        $(document).ready(function () {
            var txtPassword = document.getElementById('passwordTextBox');
            var $revealEye = $('<span class="reveal-eye"></span>')
            $(txtPassword).parent().append($revealEye);
            $(txtPassword).on("keyup", checkShowPasswordVisibility)

            $revealEye.on({
                mousedown: function () { txtPassword.setAttribute("type", "text") },
                mouseup: function () { txtPassword.setAttribute("type", "password") },
                mouseout: function () { txtPassword.setAttribute("type", "password") }
            });
        })
    </script>
    <script>
        function checkShowPasswordVisibility() {
            var $revealEye = $(this).parent().find(".reveal-eye");
            if (this.value) {
                $revealEye.addClass("is-visible");
            } else {
                $revealEye.removeClass("is-visible");
            }
        }

        $(document).ready(function () {
            var txtPassword = document.getElementById('passwordTextBox1');
            var $revealEye = $('<span class="reveal-eye"></span>')
            $(txtPassword).parent().append($revealEye);
            $(txtPassword).on("keyup", checkShowPasswordVisibility)

            $revealEye.on({
                mousedown: function () { txtPassword.setAttribute("type", "text") },
                mouseup: function () { txtPassword.setAttribute("type", "password") },
                mouseout: function () { txtPassword.setAttribute("type", "password") }
            });
        })
    </script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-6 col-lg-6">
                <img src="~/Content/Image/RegisterImg.jpg" id="imageregister" />
            </div>


            <div class="col-sm-6 col-md-6 col-lg-6">
                <div class="form-wrap">
                    <div class="tabs">
                        <h3 class="signup-tab">
                            <a class="active" href="#signup-tab-content" style="text-decoration:none;">SELLER</a>
                        </h3>
                        <h3 class="login-tab"><a href="#login-tab-content" style="text-decoration: none;">CUSTOMER</a></h3>
                    </div>
                    <!--.tabs-->

                    <div class="tabs-content">
                        @if (@ViewBag.Message != null)
                        {
                            <div class="alert alert-warning alert-dismissable">
                                <a class="panel-close close" data-dismiss="alert">×</a>
                                <i class="fas fa-exclamation-triangle"></i>
                                @ViewBag.Message
                            </div>
                        }
                        <div id="signup-tab-content" class="active">
                            @using (Html.BeginForm("SaveRegisterCustomer", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <form class="signup-form" action="" method="post">

                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", @placeholder = "FirstName" })
                                            @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", @placeholder = "Lastname" , autocomplete = "off" })
                                            @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @placeholder = "Email" })
                                            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.MobileNo, new { @class = "form-control", @placeholder = "MobileNo" })
                                            @Html.ValidationMessageFor(a => a.MobileNo, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.AadharNo, new { @class = "form-control", @placeholder = "AadharNo" })
                                            @Html.ValidationMessageFor(a => a.AadharNo, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />

                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password", id = "passwordTextBox", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.ConfirmPassword, new { @class = "form-control", type = "Password", id = "passwordTextBox1", @placeholder = "Confirm Password" })
                                            @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <input type="file" name="image" id="image" />
                                        @Html.ValidationMessageFor(model => model.ProfileImage, "", new { @class = "text-danger" })
                                    </div>

                                    <br />
                                    <input type="submit" class="button" value="REGISTER" />

                                </form>
                            }
                            <!--.login-form-->
                            <div class="help-text">
                                <p>By signing up, you agree to our</p>
                                <p><a href="#">Terms of service</a></p>
                            </div>
                            <!--.help-text-->

                        </div>
                        <!--.signup-tab-content-->

                        <div id="login-tab-content">
                            @using (Html.BeginForm("SaveRegisterDetails", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {

                                <form class="login-form" action="" method="post">
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", @placeholder = "FirstName" })
                                            @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", @placeholder = "Lastname" })
                                            @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @placeholder = "Email" })
                                            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.MobileNo, new { @class = "form-control", @placeholder = "MobileNo" })
                                            @Html.ValidationMessageFor(a => a.MobileNo, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.AadharNo, new { @class = "form-control", @placeholder = "AadharNo" })
                                            @Html.ValidationMessageFor(a => a.AadharNo, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />

                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password", id = "passwordTextBox", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(a => a.ConfirmPassword, new { @class = "form-control", type = "Password", id = "passwordTextBox1", @placeholder = "Confirm Password" })
                                            @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "text - danger", @style = "color:red" })
                                        </div>
                                    </div><br />
                                    <div class="row">

                                        <input type="file" name="image" id="image" />
                                        @Html.ValidationMessageFor(model => model.ProfileImage, "", new { @class = "text-danger" })
                                    </div>

                                    <br />

                                    <input type="submit" class="button" value="REGISTER" />
                                </form>
                            }
                            <!--.login-form-->
                            <div class="help-text">
                                <p>By signing up, you agree to our</p>
                                <p><a href="#">Terms of service</a></p>
                            </div>
                            <!--.help-text-->
                        </div>
                        <!--.login-tab-content-->

                    </div>
                    <!--.tabs-content-->
                </div>
            </div>
        </div>
    </div>
    <!--.form-wrap-->

    <script>
        jQuery(document).ready(function ($) {
            tab = $('.tabs h3 a');

            tab.on('click', function (event) {
                event.preventDefault();
                tab.removeClass('active');
                $(this).addClass('active');

                tab_content = $(this).attr('href');
                $('div[id$="tab-content"]').removeClass('active');
                $(tab_content).addClass('active');
            });
        });

    </script>
    
</body>

</html>

